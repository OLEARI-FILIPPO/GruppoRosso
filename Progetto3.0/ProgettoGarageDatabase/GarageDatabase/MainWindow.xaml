<Window x:Class="GarageDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GarageDatabase"
        xmlns:viewModel="clr-namespace:GarageDatabase.ModelView"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        >

    <Border Background="#222537"
            CornerRadius="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition />
                <ColumnDefinition Width="159*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition />
            </Grid.RowDefinitions>


            <!--        LOGO    E TOGGLE BUTTON    -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="GARAGE"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="30" Height="39" Width="112" Margin="20,0,0,0">

                </TextBlock>
                <ToggleButton Width="100" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="60,0,0,0" FontSize="22">
                    <ToggleButton.Background>

                        <ImageBrush ImageSource="Immagini/tgBtn_default.png"
                                            Stretch="None"/>

                    </ToggleButton.Background>
                </ToggleButton>
            </StackPanel>


            <!--    MENU    -->
            <StackPanel Grid.Row="1">
                <RadioButton Content="AGGIUNGI PIANO"
                             Height="50"
                             FontSize="20"
                             Foreground="White"
                             Style="{StaticResource TemaMenuBottone}"/>

                <RadioButton Content="RIMUOVI PIANO"
                             Height="50"
                             FontSize="20"
                             Foreground="White"
                             Style="{StaticResource TemaMenuBottone}"/>
            </StackPanel>

            <TextBox Width="250"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="0,18,0,17" 
                     
                     Grid.Column="2" 
                     Style="{StaticResource TemaTextboxRicerca}"/>

            <ContentControl Grid.Row="1"
                            Grid.Column="2"
                            Margin="5,10,10,10"
                            Content="{Binding CurrentView}">

                <ContentControl.DataContext>
                    <viewModel:MainViewModel/>
                </ContentControl.DataContext>
            </ContentControl>

            <Button Content="CHIUDI" 
                    Grid.Column="2" 
                    HorizontalAlignment="Left" 
                    Margin="587,0,0,0" 
                    VerticalAlignment="Top" 
                    Height="54" Width="49" 
                    Click="Button_Click" 
                    FontSize="20" 
                    FontWeight="Bold"
                    Style="{StaticResource TemaChiusuraBottone}"/>



        </Grid>



    </Border>

</Window>
